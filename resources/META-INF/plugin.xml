<idea-plugin>
  <id>deadline.ide.plugin.design.pattern</id>
  <name>DesignPattern</name>
  <version>1.0</version>
  <vendor email="2682667136@qq.com">deadline</vendor>

  <description><![CDATA[
      Generate framework code based on design patterns.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>


  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable instance="setting.DesignPatternSettings" />
    <codeInsight.lineMarkerProvider language="JAVA"
                                    implementationClass="setting.DesignPatternMarkProvider" />
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="actions.DesignPatternAction" class="actions.DesignPatternAction" text="DesignPattern"
            description="Generate framework code based on design patterns">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt p"/>
    </action>
    <action id="DesignPatternFolderAction" class="actions.DesignPatternFolderAction" text="New DesignPattern Class"
            description="generate framework code based on design patterns">
      <add-to-group group-id="FileOpenGroup" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt v"/>
    </action>
  </actions>

</idea-plugin>